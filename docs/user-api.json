{
    "openapi": "3.0.3",
    "info": {
        "title": "User Api",
        "description": "User API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/users": {
            "post": {
                "description": "Register New User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "fredik": {
                                    "description": "Register New User",
                                    "value": {
                                        "username": "fredik",
                                        "password": "rahasia",
                                        "name": "Fredik Stefan"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "name",
                                    "username",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "parameters": [],
                "responses": {
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validationerror": {
                                        "description": "Validation Error",
                                        "value": {
                                            "errors": {
                                                "username": [
                                                    "username must not be blank",
                                                    "username min 6 character"
                                                ],
                                                "name": [
                                                    "username must not be blank",
                                                    "username min 6 character"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "Success register user",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "description": "Success register user",
                                        "value": {
                                            "data": {
                                                "id": "1",
                                                "username": "fredik",
                                                "name": "Fredik Stefan"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "erros": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "description": "Login User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object"
                            }
                        }
                    }
                },
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/api/users/current": {
            "get": {
                "description": "Get current user",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "patch": {
                "description": "Update current user",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/api/logout": {
            "delete": {
                "description": "Logout current user",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    }
}